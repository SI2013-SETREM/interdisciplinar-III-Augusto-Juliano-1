<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Colaboradores por Setor
                </h2>
            </div>
            <div class="body" ng-controller="setorPessoasController">

                <div class="row ">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="form-line disabled">
                                <label for="Set_descricao">Setor</label>
                                <input class="form-control" ng-model="Sts_setor.Set_descricao" id="Set_descricao" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="form-line disabled">
                                <label for="Set_produtivo">Tipo de Setor</label>
                                <select id="set_produtivo" class="form-control show-tick" ng-model="Sts_setor.Set_produtivo" disabled convert-to-bool>
                                    <option value="true">Produtivo</option>
                                    <option value="false">Não Produtivo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <form ng-submit="save(pessoasSetorList);">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 20px;"></th>
                                            <th>
                                                <a ng-click="sortType = 'Pes_razaosocial';sortReverse = !sortReverse">
                                                    Colaborador
                                                    <i ng-show="sortType === 'Pes_razaosocial' && !sortReverse" class="material-icons md-18">arrow_drop_down</i>
                                                    <i ng-show="sortType === 'Pes_razaosocial' && sortReverse" class="material-icons md-18">arrow_drop_up</i>
                                                </a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-show="pessoasList.length === 0 && http.pendingRequests.length == 0">
                                            <td colspan="1000">Nenhum registro encontrado :(</td>
                                        </tr>
                                        <tr ng-repeat="Sts_pessoa in pessoasList| orderBy:sortType:sortReverse | filter:search">
                                            <td><input type="checkbox" id="chkColaborador{{Sts_pessoa.Pes_razaosocial}}" ng-model="Sts_pessoa.marcado"><label for="chkColaborador{{Sts_pessoa.Pes_razaosocial}}"></label></td>
                                            <td>{{Sts_pessoa.Pes_razaosocial}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn bg-light-blue waves-effect" ng-click="shift();">
                                <i class="material-icons">compare_arrows</i>
                            </button>
                        </div>
                        <div class="col-md-5">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 20px;"></th>
                                            <th>
                                                <a ng-click="sortType = 'Pes_razaosocial';sortReverse = !sortReverse">
                                                    Colaborador do Setor
                                                    <i ng-show="sortType === 'Pes_razaosocial' && !sortReverse" class="material-icons md-18">arrow_drop_down</i>
                                                    <i ng-show="sortType === 'Pes_razaosocial' && sortReverse" class="material-icons md-18">arrow_drop_up</i>
                                                </a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-show="pessoasSetorList.length === 0 && http.pendingRequests.length == 0">
                                            <td colspan="1000">Nenhum registro encontrado :(</td>
                                        </tr>
                                        <tr ng-repeat="Sts_pessoa in pessoasSetorList| orderBy:sortType:sortReverse | filter:search">
                                            <td><input type="checkbox" id="chkColaboradorSetor{{Sts_pessoa.Pes_razaosocial}}" ng-model="Sts_pessoa.marcado"><label for="chkColaboradorSetor{{Sts_pessoa.Pes_razaosocial}}"></label></td>
                                            <td>{{Sts_pessoa.Pes_razaosocial}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 pull-right">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                            <a class="btn btn-default m-t-15 waves-effect" href="#Setor">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $.AdminBSB.browser.activate();
        $.AdminBSB.leftSideBar.activate();
        $.AdminBSB.rightSideBar.activate();
        $.AdminBSB.navbar.activate();
        $.AdminBSB.dropdownMenu.activate();
        $.AdminBSB.input.activate();
        $.AdminBSB.select.activate();
        $.AdminBSB.search.activate();
    });
</script>