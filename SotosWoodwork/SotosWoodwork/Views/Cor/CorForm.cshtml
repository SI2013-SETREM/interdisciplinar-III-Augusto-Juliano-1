<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Grupo de Clientes
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="save(Sts_cor);">
                    <input class="form-control hidden" value="0" ng-model="Sts_cor.Cor_codigo" id="cor_codigo">

                    <label for="Cor_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_cor.Cor_descricao" id="Cor_descricao" required>
                        </div>
                    </div>

                    <label for="Cor_codigocor">Código da Cor</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_cor.Cor_codigocor" id="Cor_codigocor">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#Cor">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

