<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Colaboradores por Setor
                </h2>
            </div>
            <div class="body" ng-controller="produtoMateriaisController">

                <div class="row ">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="form-line disabled">
                                <label for="Pro_descricao">Produto</label>
                                <input class="form-control" ng-model="Sts_produto.Pro_descricao" id="Pro_descricao" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <form ng-submit="save(produtoMateriaisList);">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 20px;"></th>
                                            <th>
                                                <a ng-click="sortType = 'Pro_descricao';sortReverse = !sortReverse">
                                                    Matéria Prima
                                                    <i ng-show="sortType === 'Pro_descricao' && !sortReverse" class="material-icons md-18">arrow_drop_down</i>
                                                    <i ng-show="sortType === 'Pro_descricao' && sortReverse" class="material-icons md-18">arrow_drop_up</i>
                                                </a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-show="produtoMateriaisList.length === 0 && http.pendingRequests.length == 0">
                                            <td colspan="1000">Nenhum registro encontrado :(</td>
                                        </tr>
                                        <tr ng-repeat="Sts_produtomateriais in produtoMateriaisList| orderBy:sortType:sortReverse | filter:search">
                                            <td>{{Sts_produtomateriais.Sts_materiaprima}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 pull-right">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                            <a class="btn btn-default m-t-15 waves-effect" href="#Produto">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $.AdminBSB.browser.activate();
        $.AdminBSB.leftSideBar.activate();
        $.AdminBSB.rightSideBar.activate();
        $.AdminBSB.navbar.activate();
        $.AdminBSB.dropdownMenu.activate();
        $.AdminBSB.input.activate();
        $.AdminBSB.select.activate();
        $.AdminBSB.search.activate();
    });
</script>