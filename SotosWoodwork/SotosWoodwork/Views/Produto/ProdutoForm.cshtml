<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Matéria Prima
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="saveProduto(Sts_produto);">

                    <input class="form-control hidden" value="P" ng-model="Sts_produto.Pro_tipo" id="pro_tipo">
                    <input class="form-control hidden" value="0" ng-model="Sts_produto.Pro_codigo" id="pro_codigo">

                    <h4> Informações Gerais</h4>
                    <br />
                    <label for="Pro_codigofabrica">Código do Produto</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_produto.Pro_codigofabrica" id="Pes_razaosocial">
                        </div>
                    </div>

                    <label for="Pro_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input type="text" class="form-control" ng-model="Sts_produto.Pro_descricao" id="Pro_descricao" required>
                        </div>
                    </div>

                    <label for="Cor_codigo">Cor</label>
                    <div class="form-group">
                        <div class="form-line">
                            <select id="Cor_codigo" class="form-control" ng-model="Sts_produto.Sts_cor" ng-options="Sts_cor.Cor_codigocor + ' - ' + Sts_cor.Cor_descricao for Sts_cor in coresList track by Sts_cor.Cor_codigo"></select>
                        </div>
                    </div>

                    <label for="Pro_valorvenda">Valor de Venda</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" step="0.01" class="form-control" ng-model="Sts_produto.Pro_valorvenda" id="Pro_valorvenda">
                        </div>
                    </div>

                    <h4> Dimensões do Produto</h4>
                    <br />
                    <label for="Pro_altura">Altura</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" step="0.01" class="form-control" ng-model="Sts_produto.Pro_altura" id="Pro_altura">
                        </div>
                    </div>
                    <label for="Pro_largura">Largura</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" step="0.01" class="form-control" ng-model="Sts_produto.Pro_largura" id="Pro_largura">
                        </div>
                    </div>
                    <label for="Pro_profundidade">Profundidade</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" step="0.01" class="form-control" ng-model="Sts_produto.Pro_profundidade" id="Pro_profundidade">
                        </div>
                    </div>

                    <label for="Unm_codigo">Unidade de Medida<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <select id="Unm_codigo" class="form-control" ng-model="Sts_produto.Sts_unidademedida" ng-options="Sts_unidademedida.Unm_descricao + ' | ' + Sts_unidademedida.Unm_sigla for Sts_unidademedida in unidademedidaList track by Sts_unidademedida.Unm_codigo" required></select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#Produto">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

