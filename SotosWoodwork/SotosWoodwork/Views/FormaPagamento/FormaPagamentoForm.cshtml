<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Método de Pagamento
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="save(Sts_formapagamento);">
                    <input class="form-control hidden" value="0" ng-model="Sts_formapagamento.Frp_codigo" id="frp_codigo">

                    <label for="Frp_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_formapagamento.Frp_descricao" id="Frp_descricao" required>
                        </div>
                    </div>

                    <label for="Frp_desconto">Desconto</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="number" step="0.1" max="99.9" min="0" class="form-control" ng-model="Sts_formapagamento.Frp_desconto" id="Frp_desconto">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#FormaPagamento">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

