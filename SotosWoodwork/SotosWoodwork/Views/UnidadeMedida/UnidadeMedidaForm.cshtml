<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Setores
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="save(Sts_unidademedida);">
                    <input class="form-control hidden" value="0" ng-model="Sts_unidademedida.Unm_codigo" id="unm_codigo">

                    <label for="Unm_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_unidademedida.Unm_descricao" id="Unm_descricao" required>
                        </div>
                    </div>

                    <label for="Unm_sigla">Sigla<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input maxlength="2" class="form-control" ng-model="Sts_unidademedida.Unm_sigla" id="Unm_sigla" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#UnidadeMedida">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

