<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Máquinas
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="save(Sts_maquina);">

                    <input class="form-control hidden" value="0" ng-model="Sts_maquina.Maq_codigo" id="maq_codigo">

                    <label for="Maq_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_maquina.Maq_descricao" id="Maq_descricao" required>
                        </div>
                    </div>

                    <label for="Cid_codigo">Setor<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <select id="Set_codigo" class="form-control" ng-model="Sts_maquina.Sts_setor" ng-options="Sts_setor.Set_descricao for Sts_setor in setoresList track by Sts_setor.Set_codigo" required></select>
                        </div>
                    </div>

                    <label for="Maq_status">Situação da Máquina<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <select id="maq_status" class="form-control show-tick" ng-model="Sts_maquina.Maq_status" required convert-to-bool>
                                <option value="true">Ativa</option>
                                <option value="false">Inativa</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#Maquina">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

