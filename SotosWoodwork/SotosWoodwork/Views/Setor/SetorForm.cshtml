<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Setores
                </h2>
            </div>
            <div class="body">
                <form role="form" name="form" ng-submit="save(Sts_setor);">
                    <input class="form-control hidden" value="0" ng-model="Sts_setor.Set_codigo" id="set_codigo">

                    <label for="Set_descricao">Descrição<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <input class="form-control" ng-model="Sts_setor.Set_descricao" id="Set_descricao" required>
                        </div>
                    </div>

                    <label for="Set_produtivo">Tipo de Setor<strong class="text-danger">*</strong></label>
                    <div class="form-group required">
                        <div class="form-line">
                            <select id="set_produtivo" class="form-control show-tick" ng-model="Sts_setor.Set_produtivo" required convert-to-bool>
                                <option value="true">Produtivo</option>
                                <option value="false">Não Produtivo</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Salvar</button>
                    <a class="btn btn-default m-t-15 waves-effect" href="#Setor">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

